{
  "name": "@vuduc0801/react-native-atoms",
  "version": "1.1.0",
  "description": "Build atoms ui for react native",
  "main": "./dist/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "default": "./dist/esm/index.js",
        "types": "./dist/index.d.mts"
      },
      "require": {
        "default": "./dist/index.js",
        "types": "./dist/index.d.ts"
      }
    }
  },
  "bin": {
    "atoms": "dist/cli.js"
  },
  "scripts": {
    "biome:check": "biome check --write",
    "build": "tsup",
    "build:watch": "tsup --watch ./src"
  },
  "keywords": [
    "atoms",
    "ui",
    "react-native"
  ],
  "author": "Richard",
  "license": "ISC",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-native": ">=0.76.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.1",
    "react-native": "^0.84.0",
    "tsup": "^8.4.0",
    "typescript": "^5.8.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vuduc0910/react-native-atoms.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/vuduc0910/react-native-atoms/issues"
  },
  "homepage": "https://github.com/vuduc0910/react-native-atoms#readme"
}